@page "{reportingMark?}"
@model TrainWebApp.Pages.CRUDPageModel
@{
    ViewData["Title"] = "Rolling Stock Maintenance";
}

 <h1>Product Maintenance for Reporting Mark: @Model.reportingMark</h1>
  <p style="font-weight:400; font-size:30px; color:green">@Model.Feedback</p>
<style>
   :root {
        --max-body-width: 60rem;
    }

    .setflex {
        display: flex;
    }

    .onethird{
        width: 31%;
        margin-right: 2%;
    }

    .onehalf {
        width: 47%;
        margin-right: 3%;
    }

    .smallbox {
        width: 60px;
    }
</style>

@section Scripts{
    <partial name="_validationScriptsPartial" />
}


<form method="post">
<label>
     Reporting Mark:
        @if (Model.RollingStocke == null)
        {
            <input type="text" asp-for="RollingStocke.ReportingMark" readonly data-val="false" value="">
        }
        else
        {
            <input type="text" asp-for="RollingStocke.ReportingMark" readonly data-val="false">

        }

    <span asp-validation-for="RollingStocke.ReportingMark"></span>
</label>  

<label>
    Owner:
    <input type="text" asp-for="RollingStocke.Owner" placeholder="Owner" />
    <span asp-validation-for="RollingStocke.Owner"></span>
</label>

<label>
    Capacity:
    <input type="number" asp-for="RollingStocke.Capacity" placeholder="Capacity">
    <span asp-validation-for="RollingStocke.Capacity"></span>
</label>

<label> 
    Light Weight:
    <input type="number" asp-for="RollingStocke.LightWeight" placeholder="Light Weight">
    <span asp-validation-for="RollingStocke.LightWeight"></span>
</label>

  <label>
        Select a Car Type:
        <select>
            <option value="0">select ... </option>
            <option value="1">Autorack</option>
            <option value="2">Boxcar</option>
            <option value="3">Centerbeam</option>
            <option value="4">Covered Hopper</option>
            <option value="5">Coil Car</option>
            <option value="6">Flatcar</option>
            <option value="7">Gondola</option>
            <option value="8">Intermodal Equipment</option>
            <option value="9">Refrigerated Boxcar</option>
            <option value="10">Open-Top Hopper</option>
            <option value="11">Tank Car</option>
            <option value="12">Well Car</option>
             @* @foreach(var item in Model.RailCarTypeList)
           {
               <option value="@item.RailCarTypeId">@item.Name</option>
           }*@

        </select>
      </label>

<label>
    RailCarType ID:
    <input type="number" asp-for="RollingStocke.RailCarTypeId" placeholder="RailCarType ID">
    <span asp-validation-for="RollingStocke.RailCarTypeId"></span>
</label>

<label>
    In Service:
    <input type="checkbox" asp-for="RollingStocke.InService" value="true">
    <span asp-validation-for="RollingStocke.InService"></span>
</label>

<label>
    Notes:
    <input type="text" asp-for="RollingStocke.Notes" placeholder="Notes">
    <span asp-validation-for="RollingStocke.Notes"></span>
</label>




 @if (Model.reportingMark != null)
    {
        <button type="submit" asp-page-handler="New" disabled>Save New</button>
        <button type="submit" asp-page-handler="Update">Update</button>

        <button type="submit" asp-page-handler="Delete" formnovalidate
                onclick="return confirm('Are you sure you wish to delete the rolling stock?')">
            Delete
        </button>
        <button type="submit" asp-page-handler="Clear" formnovalidate>Clear</button>
        <button type="submit" asp-page-handler="Search" formnovalidate>Search</button>
    }
    else
    {
    <button type="submit" asp-page-handler="New">Save New</button>
    <button type="submit" asp-page-handler="Update" disabled>Update</button>

    <button type="submit" asp-page-handler="Delete" formnovalidate disabled
            onclick="return confirm('Are you sure you wish to delete the rolling stock?')">
        Delete 
    </button>
    <button type="submit" asp-page-handler="Clear" formnovalidate>Clear</button>
    <button type="submit" asp-page-handler="Search" formnovalidate>Search</button>
    }

    </form>

   